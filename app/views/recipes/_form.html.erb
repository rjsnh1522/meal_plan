<% if @errors.present? %>

 <div class="error">
    <ul>
    <% @errors.each do |error| %>
        <li> <%= error %>  </li>
    <% end %>
    </ul>
 </div>
<% end  %>


<%= form_for @recipe do |f| %>
  <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
  </div>
  <div class="form-group">
         <%= f.label :description %>
        <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

  <% end %>
